<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp"
    android:layout_margin="5dp"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/user_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:hint="abcd@gmail.com"
        android:background="@drawable/edit_text_background"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/elementsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Elements=5"
        android:textStyle="bold"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/user_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/objectsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Objects=5"
        android:textStyle="bold"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/elementsCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/containersCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Containers=5"
        android:textStyle="bold"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/objectsCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/combinationsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Containers Contains Objects=3"
        android:textStyle="bold"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/containersCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="114dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:src="@drawable/ic_logout"
        app:layout_constraintTop_toBottomOf="@id/combinationsCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
