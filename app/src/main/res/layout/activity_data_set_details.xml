<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DataSetDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <TextView
                    android:id="@+id/itemNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Item Name"
                    android:text=""
                    android:textColor="@color/colorDarkRed"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Description"
                    android:text=""
                    android:textColor="@color/colorDarkRed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/itemTypeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Item Type"
                    android:text=""
                    android:textColor="@color/colorDarkRed" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/updatedCardView"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardView"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <TextView
                    android:id="@+id/updatedItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Updated Name"
                    android:text=""
                    android:textColor="@color/colorDarkRed"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/updatedDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Updtaed Description"
                    android:text=""
                    android:textColor="@color/colorDarkRed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/updatedItemType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Updated Item Type"
                    android:text=""
                    android:textColor="@color/colorDarkRed" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayoutForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editItemName"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Item Name"
            android:visibility="gone"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:hint="Description"
            android:textColor="@color/colorPrimary" />

        <RadioGroup
            android:id="@+id/radioGroupItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OBJECT"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/radioContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTAINER"
                android:textColor="@color/colorPrimary" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/saveChangesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:padding="15dp"
                android:src="@drawable/ic_save" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:padding="15dp"
                android:src="@drawable/ic_back" />

        </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/updateMessage"
        android:layout_width="386dp"
        android:layout_height="468dp"
        android:layout_below="@+id/linearLayoutForm"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        app:lottie_autoPlay="false"
        app:lottie_fileName="update_message.json"
        app:lottie_speed="2" />

    <RelativeLayout
        android:layout_width="374dp"
        android:layout_height="403dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="52dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/containerMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_fileName="container_message.json"
            app:lottie_speed="2" />

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/deleteMessage"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:layout_below="@+id/cardView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-193dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/transparent"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_fileName="delete_message.json"
        app:lottie_speed="2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_more_vert" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/floatingActionButton"
        android:layout_alignStart="@+id/floatingActionButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editActionButton"
        android:layout_alignStart="@+id/floatingActionButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_delete" />

    <LinearLayout
        android:id="@+id/getContainerView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_above="@+id/setContainerView"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/ObjectSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Object Name"
            android:text=" "
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/InSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ContainerSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Container Name"
            android:text=" "
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="474dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getContainerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Get Container"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/setContainerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Container"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>